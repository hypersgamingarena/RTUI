@{
    ViewData["Title"] = "Dashboard";
}

<h2>AI Debugging Dashboard</h2>

@if (ViewBag.DebugResult != null)
{
    <div class="alert alert-info">
        <strong>Debugging Result:</strong> @ViewBag.DebugResult
    </div>
}

<form method="post" asp-action="RunAIDebugger">
    <button type="submit" class="btn btn-primary">Run AI Debugger</button>
</form>
