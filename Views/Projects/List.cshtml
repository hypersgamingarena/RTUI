@model List<RTUI.Models.Project>

@{
    ViewData["Title"] = "Current Projects";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Current Projects - RTUI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="text-center mb-4">Current Projects</h2>

        @if (Model != null && Model.Count > 0)
        {
            <table class="table table-hover table-bordered">
                <thead>
                    <tr class="bg-primary text-white">
                        <th>Project Name</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model)
                    {
                        <tr>
                            <td>@project.Name</td>
                            <td>@project.Status</td>
                            <td>
                                <a href="#" class="btn btn-outline-primary btn-sm">Work on it</a>
                                <a href="#" class="btn btn-outline-warning btn-sm">Debug it</a>
                                <a href="#" class="btn btn-outline-success btn-sm">Add more modules</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No projects available at the moment.</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
